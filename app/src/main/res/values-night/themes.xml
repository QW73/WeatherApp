<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherAppTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryLightColorNight </item>
        <item name="colorPrimaryVariant">@color/primaryLightColorNight</item>
        <item name="colorOnPrimary">@color/primaryDarkColorNight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorNight</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColorNight</item>
        <item name="colorOnSecondary">@color/secondaryDarkColorNight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">?attr/colorOnSecondary</item>
    </style>

    <style name="SearchViewItemBack" parent="CardView">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SearchItemStyle" parent="CardView">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SettingsTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SettingsButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">sans-serif-medium"</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="WeatherForecastStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-medium"</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="WeekForecastStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-medium"</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
</resources>